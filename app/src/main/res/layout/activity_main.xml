<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.ccs.yvonne.allaboutkorean.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All about Korean"
        android:textStyle="bold"
        android:textSize="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/label"
        app:layout_constraintVertical_bias="1.0"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phrases and Words with English Translation"
        android:textSize="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="354dp"
        android:textColor="#2E2E2E"/>

    <Button
        android:id="@+id/exitB"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:text="Exit"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2E2E2E"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:id="@+id/gradesB"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:text="Grades"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/exitB"
        android:textColor="#000000"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2E2E2E"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <Button
        android:id="@+id/categoriesB"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:text="Categories"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gradesB"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:textColor="#000000"
        android:background="@drawable/buttonshape"
        android:shadowColor="#2E2E2E"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

</android.support.constraint.ConstraintLayout>
